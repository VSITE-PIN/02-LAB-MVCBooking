@model List<HotelBooking>

<h1>Lista rezervacija</h1>

@if (Model == null || !Model.Any())
{
    <p>Nema rezervacija za prikaz.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ime gosta</th>
                <th>Broj sobe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.GuestName</td>
                    <td>@booking.RoomNumber</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Home" asp-action="Create" class="btn btn-primary">Dodaj novu rezervaciju</a>
