@model MVCBooking.Models.HotelBooking

<h2>Create a New Booking</h2>

<form asp-action="CreateBooking" method="post">
    <div class="form-group">
        <label asp-for="GuestName"></label>
        <input asp-for="GuestName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
